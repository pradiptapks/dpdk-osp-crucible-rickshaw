{
  "type": "object",
  "properties": {
    "rickshaw-tool": {
      "type": "object",
      "properties": {
        "schema": {
          "type": "object",
          "properties": {
            "version": {
              "type": "string",
              "pattern": "^2020\\.03\\.18$"
            }
          },
          "required": [
            "version"
          ],
          "additionalProperties": false
        },
        "required": [
          "schema"
        ],
        "additionalProperties": false
      }
    },
    "tool": {
      "type": "string",
      "pattern": "^.+$"
    },
    "controller": {
      "type": "object",
      "properties": {
        "post-script": {
          "type": "string",
          "pattern": "^.+$"
        }
      },
      "required": [
        "post-script"
      ],
      "additionalProperties": false
    },
    "collector": {
      "type": "object",
      "properties": {
        "files-from-controller": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "src": {
                "type": "string",
                "pattern": "^.+$"
              },
              "dest": {
                "type": "string",
                "pattern": "^.+$"
              },
              "required": {
                "type": "boolean"
              }
            },
            "additionalProperties": false,
            "required": [
              "src",
              "dest"
            ]
          },
          "additionalItems": false
        },
        "blacklist": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "endpoint": {
                "type": "string",
                "enum": [
                  "osp",
                  "remotehost",
                  "k8s"
                ]
              },
              "collector-types": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "compute",
                    "profiler",
                    "master",
                    "worker",
                    "client",
                    "server"
                  ]
                }
              }
            },
            "additionalProperties": false,
            "required": [
              "endpoint",
              "collector-types"
            ]
          },
          "additionalItems": false
        },
        "whitelist": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "endpoint": {
                "type": "string",
                "enum": [
                  "osp",
                  "remotehost",
                  "k8s"
                ]
              },
              "collector-types": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": [
                    "compute",
                    "profiler",
                    "master",
                    "worker",
                    "client",
                    "server"
                  ]
                }
              }
            },
            "additionalProperties": false,
            "required": [
              "endpoint",
              "collector-types"
            ]
          },
          "additionalItems": false
        },
        "start": {
          "type": "string",
          "pattern": "^.+$"
        },
        "stop": {
          "type": "string",
          "pattern": "^.+$"
        }
      },
      "required": [
        "start",
        "stop"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "rickshaw-tool",
    "tool",
    "controller",
    "collector"
  ],
  "additionalProperties": false
}

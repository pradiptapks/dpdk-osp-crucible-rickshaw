{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/perftool-incubator/rickshaw/master/schema/bench-params.json",
  "type": "array",
  "minItems": 1,
  "uniqueItems": true,
  "items": {
    "type": "array",
    "minItems": 1,
    "uniqueItems": true,
    "items": {
      "type": "object",
      "properties": {
        "arg": {
          "type": "string",
          "minLength": 1
        },
        "val": {
          "type": "string",
          "minLength": 1
        },
        "role": {
          "type": "string",
          "enum": [
            "client",
            "server",
            "all"
          ]
        },
        "id": {
          "type": "string"
        }
      },
      "required": [
        "arg",
        "val"
      ],
      "additionalProperties": false
    }
  }
}
